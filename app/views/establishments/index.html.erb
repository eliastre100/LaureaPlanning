<h1>Establishments</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @establishments.each do |establishment| %>
    <tr>
      <td><%= establishment.name %></td>
      <td>
        <%= link_to 'Show', establishment %>
        <% if session[:editable] %>
          <%= link_to 'Edit', edit_establishment_path(establishment) %>
          <%= link_to 'Destroy', establishment, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>

</table>

<%= link_to 'Create', new_establishment_url if session[:editable] %>