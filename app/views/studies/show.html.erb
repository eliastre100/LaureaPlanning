<h1><%= @study.name %> (in <%= @study.establishment.name %>)</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Establishment</th>
      <th>Credits</th>
      <th>Semester</th>
      <th>Instances</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @study.name %></td>
      <td><%= link_to @study.establishment.name, @study.establishment %></td>
      <td><%= @study.credits %></td>
      <td><%= @study.semester %></td>
      <td><%= @study.instances.count %></td>
    </tr>
  </tbody>
</table>

<h3>Instances</h3>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Start at</th>
      <th>End at</th>
      <th>Cours</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @study.instances.each do |instance| %>
      <tr>
        <td><%= instance.code %></td>
        <td><%= instance.start_at %></td>
        <td><%= instance.end_at %></td>
        <td></td>
        <td>
          <%= link_to 'Show', instance %>
          <%= link_to 'Edit', edit_instance_path(instance) %>
          <%= link_to 'Destroy', instance, method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add instance', new_instance_path(study_id: @study.id) %>
<%= link_to 'Back', establishment_path(@study.establishment) %>